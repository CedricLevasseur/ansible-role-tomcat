#!/bin/bash
#
#	/etc/init.d/tomcat
#
#	{{ item.name }}
#	As simple as possible, using Apache Tomcat's daemon.sh mostly.
#
# chkconfig: 2345 20 80
# description: {{ item.name }}

# Source function library.
if [ -f /etc/init.d/functions ] ; then
  . /etc/init.d/functions
fi

start() {
	echo -n "Starting {{ item.name }}: "
  returncode=$({{ item.directory }}/{{ tomcat_archive[item.version]['dir'] }}/bin/startup.sh)
	touch /var/lock/subsys/tomcat
	return ${returncode}
}

stop() {
	echo -n "Shutting down {{ item.name }}: "
	returncode=$({{ item.directory }}/{{ tomcat_archive[item.version]['dir'] }}/bin/shutdown.sh)
	rm -f /var/lock/subsys/tomcat
	return ${returncode}
}

case "$1" in
  start)
	  start
	;;
  stop)
	  stop
	;;
  status)
    echo "not supported."
	;;
  restart)
    stop
	  start
	;;
  reload)
	  echo "not supported."
	;;
    *)
	echo "Usage: <servicename> {start|stop|status|restart|reload}"
	exit 1
	;;
esac

exit $?
